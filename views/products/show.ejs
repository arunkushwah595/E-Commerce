<% layout('layouts/boilerplate') %>

    <%- include('../partials/navbar') %>
        <%- include('../partials/flash') %>

            <div class="row">

                <div class="col-lg-5 mt-3">
                    <!-- displaying flash -->
                    <div class="mb-3">
                        <% if(msg && msg.length){ %>
                            <div class="alert alert-success" role="alert">
                                <%=msg%>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Close"></button>
                            </div>
                            <% } %>
                    </div>


                    <div class="card shadow mx-auto" style="width: 18rem;">
                        <img src="<%=foundProduct.img%>" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h2 class="card-title">
                                <%=foundProduct.name%>
                            </h2>
                            <h5 class="card-title">
                                <%=foundProduct.price%>
                            </h5>
                            <p class="card-text">
                                <%=foundProduct.desc%>
                            </p>
                            <!-- <a href="/products" class="btn btn-light btn-sm">Back</a> -->
                            <a href="/products/<%=foundProduct._id%>/edit" class="btn btn-dark btn-sm">Edit</a>
                            <a href="#" class="btn btn-info btn-sm">Add To Cart</a>
                            <a href="#" class="btn btn-success btn-sm">Buy Product</a>
                        </div>
                    </div>
                </div>


                <div class="col-lg-6">
                    <h3 class="display-5">
                        <h1>Leave a Review</h1>
                    </h3>
                    <form action="/products/<%=foundProduct._id%>/review" method="POST">
                        <div class="mb-0">
                            <h6>Rating</h6>
                            <fieldset class="starability-basic">
                                <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                                    aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="rating" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="rating" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="rating" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="rating" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="rating" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-2">
                            <label class="form-label" for="comment">
                                <h6>Comment:</h6>
                            </label>
                            <textarea class="form-control" type="range" rows="3" name="comment" id="comment"></textarea>
                        </div>

                        <button class="btn btn-success btn-sm mb-3">Add Review </button>
                    </form>

                    <div class="my-4">
                        <% for(let review of foundProduct.reviews){ %>
                            <div class="card mb-2">
                                <p class="mb-0 mx-3 mt-1">
                                    <% if(review.createdAt){%>
                                        <%=review.createdAt.toDateString()%>
                                            <% } %>
                                </p>
                                <h5 class="card-header">Rated: <%=review.rating%>
                                        <br>
                                        <p class="starability-result" data-rating="<%=review.rating%>">
                                        </p>
                                </h5>



                                <div class="card-body">
                                    <h5 class="card-title">Comment: </h5>
                                    <p class="card-text">
                                        <%=review.comment%>
                                    </p>
                                    <a href="/products/<%=review._id%>/<%=foundProduct._id%>?_method=DELETE"
                                        class="btn btn-primary">Delete</a>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>




            </div>